<.header>
  Enrollments {@enrollments.id}
  <:subtitle>This is a enrollments record from your database.</:subtitle>
  <:actions>
    <.link patch={~p"/enrollments/#{@enrollments}/show/edit"} phx-click={JS.push_focus()}>
      <.button>Edit enrollments</.button>
    </.link>
  </:actions>
</.header>

<.list>
  <:item title="Name">{@enrollments.name}</:item>
  <:item title="Course">{@enrollments.course_id}</:item>
  <:item title="Description">{@enrollments.description}</:item>
</.list>

<.back navigate={~p"/enrollments"}>Back to enrollments</.back>

<.modal :if={@live_action == :edit} id="enrollments-modal" show on_cancel={JS.patch(~p"/enrollments/#{@enrollments}")}>
  <.live_component
    module={LoginAppWeb.EnrollmentsLive.FormComponent}
    id={@enrollments.id}
    title={@page_title}
    action={@live_action}
    enrollments={@enrollments}
    patch={~p"/enrollments/#{@enrollments}"}
  />
</.modal>
